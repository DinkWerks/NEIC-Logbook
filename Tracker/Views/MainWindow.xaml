<Window x:Class="Tracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <Button Command="{Binding NavigateCommand}" CommandParameter="HomeScreen">
                <Image Source="/Tracker.Core;component/Resources/Icons/house.png" Width="16" Height="16"/>
            </Button>
            <Button Content="Back" Command="{Binding GoBackCommand}"/>
            <Button IsEnabled="False" Content="Forward"/>

        </DockPanel>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="ContentRegion"/>
    </Grid>
</Window>
