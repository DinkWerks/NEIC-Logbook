<UserControl x:Class="mRecordSearchList.Views.RSEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Orientation="Horizontal" Width="700">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC5BAA6" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="{Binding RecordSearchID}"/>
            <Rectangle VerticalAlignment="Stretch" Margin="5,2" Width="1" Stroke="DarkGray"/>
            <TextBlock Text="{Binding RecordSearchName}" Width="350"/>
            <TextBlock Text="{Binding RecordSearchID}" Width="200"/>
        </StackPanel>
    </Grid>
</UserControl>
